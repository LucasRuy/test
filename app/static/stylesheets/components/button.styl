.button {
  display block
  position relative

  padding 5px 10px
  margin 10px 0px

  font-weight 700
  font-size 14px

  border-radius 2px
  border 0px

  background-color c-white
  cursor pointer
  transition t-default

  &:focus {
    outline none
  }

  &--add {
    background-color c-orange
    color c-white

    &:hover{
      background-color #E7543D
    }
  }
  &--more {
    background-color c-white-light
    color c-orange

    width 100%
    height 62px
    line-height 55px

    &:hover{
      background-color c-gray-light
    }
  }
}
