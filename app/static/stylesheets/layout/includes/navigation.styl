.navigation {
  display block
  width 100%
  height 95px

  border-bottom 1px solid c-gray-light
  padding 26px 0px

  &__wrapper {
    display block
    width 100%
    max-width 920px

    margin-left auto
    margin-right auto
    padding 0px 10px
  }

  &__logo {
    grid(6%)

    img {
      width 35px
    }
  }
  &__menu {
    grid(10%)
    padding-left 20px
    border-left 1px solid c-gray-light

    .menu-dropdown {
      display block
      width 40px
      height 40px

      border 1px solid c-gray-light
      border-radius 4px

      cursor pointer
      transition t-default

      &:hover {
        background-color c-gray-light
      }

      &.is-active {
        background-color c-gray-light

        .menu-dropdown__list {
          visibility visible
          opacity 1
          user-select inherit
        }
        .menu-dropdown__hamburguer {
          top 0px
          left 0px
          width 20px
          transform rotate(40deg)

          &:before {
            opacity 0
          }

          &:after {
            top 12px
            width 20px
            transform rotate(-85deg)
            transform-origin 3.5px -4px
          }
        }
      }

      &__hamburguer {
        position relative

        display block
        width 16px
        height 4px

        background-color c-gray-dark
        margin 17px auto

        transition t-default

        &:before {
          content ''

          display block
          width 16px
          height 4px

          background-color c-gray-dark

          position absolute
          top -6px
          transition t-default
        }

        &:after {
          content ''

          display block
          width 16px
          height 4px

          background-color c-gray-dark

          position absolute
          top 6px
          transition t-default
        }
      }

      &__list {
        position relative
        top 10px
        z-index 9999

        display block
        width 135px

        background-color c-white
        box-shadow 0px 0px 20px rgba(0, 0, 0, 0.15)

        border 1px solid c-gray-light
        border-radius 4px

        transform-origin 0px 0px

        visibility hidden
        opacity 0
        user-select none

        transition t-default

        &__item {
          display block
          width 100%
          height auto

          padding 10px 15px
          text-align left
          transition t-default

          &:hover {
            background-color c-gray-light
          }
        }
      }

    }
  }
  &__search {
    grid(54%)
    padding 0px 10px

    .search-box {
      position relative

      svg {
        position absolute
        top 12px
        left 12px

        display block
        width 15px
        height 15px

        fill #cacaca
      }
    }
  }
  &__user {
    grid(20%)
    float right

    button {
      float left
    }

    .user-info {
      display inline-block
      width 40px
      height 38px

      background-color c-gray
      border-radius 4px

      float right
      position relative

      &__notify {
        position absolute
        top 50%
        left -10px
        transform translateY(-50%)

        font-size 12px
        padding 2px 6px
        border-radius 2px

        background-color c-orange
        color c-white
      }
    }
  }
}
